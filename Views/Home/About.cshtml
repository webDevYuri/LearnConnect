@{
    ViewData["Title"] = "About";
}

<div class="container pb-5 pt-2 mb-5 mb-md-0">
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8 text-center">
            <h1 class="display-4 fw-bold text-primary mb-3">About Us</h1>
            <p class="lead text-muted mb-0">Empowering learners worldwide since 2023</p>
        </div>
    </div>

    <div class="row justify-content-center g-4 mb-5">
        <div class="col-md-6" data-aos="fade-up">
            <div class="p-4 bg-light rounded-3 h-100 card-shadow">
                <div class="d-flex align-items-center mb-4">
                    <div class="bg-primary p-3 rounded-circle text-white me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px">
                        <i class="bi bi-lightbulb fs-4"></i>
                    </div>
                    <h2 class="h3 mb-0">Our Mission</h2>
                </div>
                <p class="text-muted mb-0">
                    To democratize education by providing accessible, high-quality learning experiences
                    that empower individuals to develop practical skills for today's rapidly evolving world.
                </p>
            </div>
        </div>

        <div class="col-md-6" data-aos="fade-up">
            <div class="p-4 bg-light rounded-3 h-100 card-shadow">
                <div class="d-flex align-items-center mb-4">
                    <div class="bg-primary p-3 rounded-circle text-white me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px">
                        <i class="bi bi-eye fs-4"></i>
                    </div>
                    <h2 class="h3 mb-0">Our Vision</h2>
                </div>
                <p class="text-muted mb-0">
                    A world where quality education is available to everyone, creating a global
                    community of lifelong learners equipped to thrive in an ever-changing landscape.
                </p>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mb-5">
        <div class="col-lg-10" data-aos="fade-up">
            <hr class="text-muted opacity-25">
        </div>
    </div>

    <div class="row justify-content-center g-4">
        <div class="col-lg-5" data-aos="fade-up">
            <div class="d-flex mb-4">
                <div class="flex-shrink-0 text-primary me-3">
                    <i class="bi bi-people fs-1"></i>
                </div>
                <div>
                    <h3 class="h4 mb-3">Who We Are</h3>
                    <p class="text-muted">
                        LearnConnect brings together expert instructors and industry professionals
                        to create courses that make a real difference in students' lives and careers.
                        Our team is passionate about education and committed to helping our students succeed.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-lg-5" data-aos="fade-up">
            <div class="d-flex mb-4">
                <div class="flex-shrink-0 text-primary me-3">
                    <i class="bi bi-journal-richtext fs-1"></i>
                </div>
                <div>
                    <h3 class="h4 mb-3">What We Offer</h3>
                    <p class="text-muted">
                        A diverse range of courses designed for beginners and professionals alike.
                        From web development and programming to data analysis, digital marketing,
                        graphic design, and essential soft skills—covering today's most in-demand skills.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-5">
        <div class="col-lg-10 text-center">
            <div class="p-5 bg-primary bg-opacity-10 rounded-3">
                <i class="bi bi-quote fs-1 text-primary opacity-50"></i>
                <p class="lead fst-italic mb-0">
                    "Education is the most powerful weapon which you can use to change the world."
                </p>
                <div class="mt-2 text-muted">— Nelson Mandela</div>
            </div>
        </div>
    </div>
</div>