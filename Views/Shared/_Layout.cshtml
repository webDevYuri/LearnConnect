<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] | Learn Connect</title>
    <link rel="icon" href="~/assets/logo/logo.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/LearnConnect.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="fixed-top bg-white">
        <nav class="navbar navbar-expand-lg navbar-light py-2">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-action="Index">
                    <span class="text-primary">Learn</span>Connect
                </a>
                <button class="navbar-toggler border-0" type="button"
                        data-bs-toggle="offcanvas" data-bs-target="#sidebar" aria-controls="sidebar">
                    <i class="bi bi-list fs-3"></i>
                </button>
                <div class="d-none d-lg-flex align-items-center ms-auto gap-4">
                    <a class="nav-link px-2 @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                        asp-action="Index">
                        Home
                    </a>
                    <a class="nav-link px-2 @(ViewContext.RouteData.Values["Action"].ToString() == "Courses" ? "active" : "")"
                       asp-action="Courses">
                        Courses
                    </a>
                    <a class="nav-link px-2 @(ViewContext.RouteData.Values["Action"].ToString() == "About" ? "active" : "")"
                       asp-action="About">
                        About
                    </a>
                    <a class="nav-link px-2 @(ViewContext.RouteData.Values["Action"].ToString() == "Pricing" ? "active" : "")"
                       asp-action="Pricing">
                        Pricing
                    </a>
                    <a class="nav-link px-2 @(ViewContext.RouteData.Values["Action"].ToString() == "Contact" ? "active" : "")"
                       asp-action="Contact">
                        Contact
                    </a>
                    <a class="btn btn-primary rounded-pill px-4 fw-medium" asp-action="Signin" asp-controller="Account">Sign in</a>
                </div>
            </div>
        </nav>
        <div class="offcanvas offcanvas-start w-75" tabindex="-1" id="sidebar" aria-labelledby="sidebarLabel">
            <div class="offcanvas-header border-bottom">
                <h5 class="offcanvas-title fw-bold" id="sidebarLabel">
                    <span class="text-primary">Learn</span>Connect
                </h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body d-flex flex-column">
                <ul class="navbar-nav mb-3">
                    <li class="nav-item py-1">
                        <a class="nav-link px-2 @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                           asp-action="Index">
                            Home
                        </a>
                    </li>
                    <li class="nav-item py-1">
                        <a class="nav-link px-2 @(ViewContext.RouteData.Values["Action"].ToString() == "Courses" ? "active" : "")"
                           asp-action="Courses">
                            Courses
                        </a>
                    </li>
                    <li class="nav-item py-1">
                        <a class="nav-link px-2 @(ViewContext.RouteData.Values["Action"].ToString() == "About" ? "active" : "")"
                           asp-action="About">
                            About
                        </a>
                    </li>
                    <li class="nav-item py-1">
                        <a class="nav-link px-2 @(ViewContext.RouteData.Values["Action"].ToString() == "Pricing" ? "active" : "")"
                           asp-action="Pricing">
                            Pricing
                        </a>
                    </li>
                    <li class="nav-item py-1">
                        <a class="nav-link px-2 @(ViewContext.RouteData.Values["Action"].ToString() == "Contact" ? "active" : "")"
                           asp-action="Contact">
                            Contact
                        </a>
                    </li>
                </ul>
                <div class="mt-auto">
                    <a class="btn btn-primary w-100 rounded-pill py-2 mb-2" asp-action="Signin" asp-controller="Account">Sign in</a>
                    <a class="btn btn-outline-primary w-100 rounded-pill py-2" asp-action="Signup" asp-controller="Account">Create account</a>
                </div>
            </div>
        </div>
    </header>

    <div id="mainContainer" class="container">
        <main role="main" class="pb-3 w-100">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light py-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-3 col-md-6">
                    <h5 class="fw-bold mb-3"><span class="text-primary">Learn</span>Connect</h5>
                    <p class="text-muted">
                        Bringing you quality online courses to help you grow your skills and career.
                    </p>
                </div>
                <div class="col-lg-2 col-md-6">
                    <h6 class="fw-bold mb-3">Navigation</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a class="nav-link px-2" asp-action="Index">
                                Home
                            </a>
                        </li>
                        <li class="mb-2">
                            <a class="nav-link px-2" asp-action="Courses">
                                Courses
                            </a>
                        </li>
                        <li class="mb-2">
                            <a class="nav-link px-2" asp-action="About">
                                About
                            </a>
                        </li>
                        <li class="mb-2">
                            <a class="nav-link px-2" asp-action="Pricing">
                                Pricing
                            </a>
                        </li>
                        <li>
                            <a class="nav-link px-2" asp-action="Contact">
                                Contact
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h6 class="fw-bold mb-3">Contact</h6>
                    <div class="d-flex mb-3">
                        <div class="me-3 text-primary">
                            <i class="bi bi-geo-alt"></i>
                        </div>
                        <div class="text-muted">
                            123 Learning Ave.<br>
                            Manila, Philippines
                        </div>
                    </div>
                    <div class="d-flex mb-3">
                        <div class="me-3 text-primary">
                            <i class="bi bi-envelope"></i>
                        </div>
                        <div class="text-muted">
                            info@learnconnect.ph
                        </div>
                    </div>
                    <div class="d-flex mb-3">
                        <div class="me-3 text-primary">
                            <i class="bi bi-telephone"></i>
                        </div>
                        <div class="text-muted">
                            +63 912 345 6789
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="#" class="text-primary me-3"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-primary me-3"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-primary me-3"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-primary"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="card border-0 card-shadow">
                        <div class="card-body p-4">
                            <h6 class="fw-bold mb-3">Subscribe to our newsletter</h6>
                            <p class="text-muted mb-3">Stay updated with our latest courses and offers.</p>
                            <form>
                                <div class="input-group mb-3">
                                    <input type="email" class="form-control" placeholder="example143@gmail.com" aria-label="example143@gmail.com">
                                    <button class="btn btn-primary" type="submit">Subscribe</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <hr class="my-4">

            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    <p class="text-muted mb-md-0">&copy; 2025 <span class="fw-medium">LearnConnect</span>. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a asp-action="Privacy" class="text-muted me-3 text-decoration-none">Privacy Policy</a>
                    <a href="#" class="text-muted text-decoration-none">Terms of Service</a>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    <script src="~/js/aos.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/landing.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>