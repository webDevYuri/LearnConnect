@{
    Layout = "User_Layout";
    ViewData["Title"] = "Dashboard";
}
@using LearnConnect.Data
@inject LcDbContext _context

@{
    var userEmail = Context.Session.GetString("UserEmail");
    var userProfile = userEmail != null ? _context.UserProfiles.FirstOrDefault(u => u.Email == userEmail) : null;
}

<div class="container">
    <div class="feed-container" style="max-width: 600px; width: 100%;">
        <div class="card rounded-4 shadow-sm mb-4 border-0">
            <div class="card-body p-3">
                <div class="d-flex align-items-center gap-2">
                    @if (userProfile?.ProfilePhotoPath != null)
                    {
                        <img src="@userProfile.ProfilePhotoPath" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" alt="Profile Photo" />
                    }
                    else
                    {
                        <i class="bi bi-person-circle fs-4"></i>
                    }
                    <div class="form-control bg-light rounded-pill text-muted border-0" style="cursor: pointer;">
                        What's on your mind, Yuri?
                    </div>
                </div>
                <div class="d-flex justify-content-between mt-3 pt-2 border-top">
                    <button class="btn btn-light rounded-pill border-0 d-flex align-items-center gap-2 flex-grow-1 justify-content-center">
                        <i class="bi bi-question-circle text-warning"></i>
                        <span class="d-none d-sm-inline">Ask Question</span>
                    </button>
                    <button class="btn btn-light rounded-pill border-0 d-flex align-items-center gap-2 flex-grow-1 justify-content-center">
                        <i class="bi bi-images text-success"></i>
                        <span class="d-none d-sm-inline">Photo</span>
                    </button>
                    <button class="btn btn-light rounded-pill border-0 d-flex align-items-center gap-2 flex-grow-1 justify-content-center">
                        <i class="bi bi-people text-danger"></i>
                        <span class="d-none d-sm-inline">Join Group</span>
                    </button>
                </div>
            </div>
        </div>
        <div class="card rounded-4 shadow-sm mb-4 border-0">
            <div class="card-body p-0">
                <div class="p-3">
                    <div class="d-flex align-items-center">
                        <img src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&auto=format&fit=crop&w=100&q=80"
                             class="rounded-circle me-2" width="40" height="40" style="object-fit: cover;" />
                        <div>
                            <h6 class="mb-0 fw-bold">Sarah Johnson</h6>
                            <p class="text-muted mb-0" style="font-size: 0.8rem;">Yesterday · <i class="bi bi-globe2"></i></p>
                        </div>
                    </div>
                    <p class="mt-2 mb-0">Just launched my new tech startup! It's been months of hard work, but we're finally live. Check out our website and let me know what you think! 🚀 #startup #tech #entrepreneurship</p>
                </div>
                <img src="https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&q=80" class="img-fluid w-100" alt="Team working on laptops" />
                <div class="px-3 py-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="bg-primary rounded-circle text-white d-inline-flex align-items-center justify-content-center"
                                  style="width: 20px; height: 20px; font-size: 0.7rem;">
                                <i class="bi bi-hand-thumbs-up-fill"></i>
                            </span>
                            <span class="text-muted ms-1" style="font-size: 0.9rem;">287</span>
                        </div>
                        <div class="text-muted" style="font-size: 0.9rem;">56 comments · 12 shares</div>
                    </div>
                </div>
                <div class="d-flex justify-content-between px-3 py-1 border-top border-bottom">
                    <button class="btn btn-light flex-grow-1 d-flex align-items-center justify-content-center gap-2 border-0">
                        <i class="bi bi-hand-thumbs-up"></i>
                        <span>Like</span>
                    </button>
                    <button class="btn btn-light flex-grow-1 d-flex align-items-center justify-content-center gap-2 border-0">
                        <i class="bi bi-chat"></i>
                        <span>Comment</span>
                    </button>
                    <button class="btn btn-light flex-grow-1 d-flex align-items-center justify-content-center gap-2 border-0">
                        <i class="bi bi-x-circle"></i>
                        <span>Hide</span>
                    </button>
                </div>
                <div class="p-3">
                    <div class="d-flex gap-2">
                        <img src="~/assets/logo/logo.png" class="rounded-circle" width="32" height="32" />
                        <div class="position-relative flex-grow-1">
                            <form>
                                <input type="text" class="form-control bg-light border-0 position-relative" placeholder="Write a comment..." />
                                <button type="submit" class="btn position-absolute" style="right: 0; top: -3px;">
                                    <i class="bi bi-send fs-5"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        @if (TempData["Success"] != null)
        {
            <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: '@TempData["Success"]',
                        confirmButtonColor: '#3085d6'
                    });
            </text>
        }
    </script>
}